# Copy this file to .env and fill values before running the server

# Server
PORT=3003
NODE_ENV=development

# Database
MONGO_URI=mongodb://localhost:27017/ecommerce

# Redis (upstash or other)
UPSTASH_REDIS_URL=redis://your_redis_url

# Clerk (Auth)
CLERK_API_KEY=
CLERK_PUBLISHABLE_KEY=

# Frontend
VITE_CLIENT_URL=http://localhost:5173
FRONTEND_ORIGIN=http://localhost:5173

# Gemini API (set these to your provider values)
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_BASE_URL=https://api.google.com/gemini

